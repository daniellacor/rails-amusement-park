<h2><%= @attraction.name %></h2>
<h3>Minimum height: <%= @attraction.min_height %></h3>
<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3>
<h3>Tickets: <%= @attraction.tickets %></h3>


<%= form_for @user do |f| %>
  <%= f.hidden_field 'attraction_id', @attraction.id %>
  <%= f.submit "Go on #{@attraction.name}" %>
<% end %>
